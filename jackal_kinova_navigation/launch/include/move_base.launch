<launch>
 
  <arg name="ns" default=""/>
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <rosparam file="$(find jackal_kinova_navigation)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find jackal_kinova_navigation)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    
    <rosparam file="$(find jackal_kinova_navigation)/params/map_nav_params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find jackal_kinova_navigation)/params/map_nav_params/global_costmap_params.yaml" command="load" />
    
    <rosparam file="$(find jackal_kinova_navigation)/params/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find jackal_kinova_navigation)/params/move_base_params.yaml" command="load" />
    
    <param name="global_costmap/robot_base_frame" value="$(arg ns)/base_link"/>
    <param name="local_costmap/robot_base_frame" value="$(arg ns)/base_link"/>
    <param name="global_costmap/global_frame" value="map"/>
    <param name="local_costmap/global_frame" value="$(arg ns)/odom"/>
    <param name="local_costmap/obstacles_layer/scan/sensor_frame" value="$(arg ns)/laser_link"/>
    <param name="local_costmap/obstacles_layer/scan/topic" value="scan"/>

    <param name="base_global_planner" type="string" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
    
    
    <remap from="$(arg ns)/odom" to="odometry/filtered" />
    <remap from="map" to="/map"/>
  </node>

</launch>
