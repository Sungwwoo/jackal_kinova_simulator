<launch>

  <arg name="use_map_topic" default="false"/>
  <arg name="scan_topic" default="/scan" />
  <arg name="first" default="JK_01"/>
  <arg name="second" default="JK_02"/>
  <arg name="ns" default=""/>
  
  
  <!-- Run the map server -->
  <arg name="map_file" default="$(find jackal_kinova_navigation)/maps/test_world.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <group ns="$(arg first)">
    <include file="$(find jackal_kinova_navigation)/launch/map_nav.launch">
      <arg name="use_map_topic" value="$(arg use_map_topic)" />
      <arg name="scan_topic"    value="$(arg first)/$(arg scan_topic)" />
      <arg name="ns" value="$(arg first)"/>
    </include>
  </group>

  <group ns="$(arg second)">
    <include file="$(find jackal_kinova_navigation)/launch/map_nav.launch">
      <arg name="use_map_topic" value="$(arg use_map_topic)" />
      <arg name="scan_topic"    value="$(arg second)/$(arg scan_topic)" />
      <arg name="ns" value="$(arg second)"/>
    </include>
  </group>


  <!-- Husky UR3 -->
  <!-- <include file="$(find husky_ur3_navigation)/launch/amcl.launch" />
  <include file="$(find husky_ur3_navigation)/launch/move_base.launch" /> -->


</launch>
